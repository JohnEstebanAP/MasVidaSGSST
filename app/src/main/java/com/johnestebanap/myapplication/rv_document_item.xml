<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="20dp">


        <LinearLayout
            android:id="@+id/lyPpal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <!--text view for our course name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!--text view for our course tracks-->
                <TextView
                    android:id="@+id/tvDocumentStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:text="Document Status"
                    android:textColor="@color/black" />


                <!--text view for our course duration-->
                <TextView
                    android:id="@+id/tvDocumentType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:text="Type"
                    android:textColor="@color/black" />

            </LinearLayout>

            <!--text view for our course description-->
            <TextView
                android:id="@+id/tvDocumentDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:text="Description"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvDocumentUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Document URL"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnURL"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/new_button"
                android:drawableStart="@drawable/ic_eye_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/white"
                android:elevation="5dp"
                android:paddingHorizontal="10dp"
                android:text="Ver Documento"
                android:textColor="@color/white"
                app:cornerRadius="10dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
